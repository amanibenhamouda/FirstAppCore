<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>The world - @ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css"/>
    <link rel="stylesheet" href="~/lib/font-awsome/css/fontawesome.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div id="sidebar">
        <img src="~/img/44877165_2001177313283076_1362452991675727872_n.jpg" alt="headshot" class="headshot" />
        <span id="username"> Amani Ben Hamouda</span>
        <ul class="menu">
            <li class="active"><a asp-controller="App" asp-action="Index">Home</a></li>
            <li><a asp-controller="App" asp-action="About">About</a></li>
            <li><a asp-controller="App" asp-action="Contact">Contact</a></li>
        </ul>
    </div>

    <div id="wrapper">
        <div id="main">
            <div>
                <button id="sidebarToggle" class="btn btn-primary"><i class="fa fa-angle-left"></i></button>
            </div>
            @RenderBody()
        </div>
        <div id="footer">
            <p class="text-primary">&copy; 2019 the world ltd</p>
        </div>
    </div>
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/js/site.js"> </script>
    @RenderSection("scripts", false)

</body>
</html>